<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demo.chung.com.appqlchitieu.activity_custom_layout2">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:src="@drawable/thunhap" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/edtThoigian"
        android:hint="Thời gian (dd/mm/yy)"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Danh Mục"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_below="@+id/edtThoigian"
        android:layout_alignEnd="@+id/edtThoigian"
        android:layout_toEndOf="@+id/imageView2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiết kiệm"
        android:id="@+id/chkTietkiem"
        android:checked="false"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/btnAdd" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiền thưởng"
        android:id="@+id/chkTienthuong"
        android:checked="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lương"
        android:id="@+id/chkLuong"
        android:checked="false"
        android:layout_below="@+id/chkTietkiem"
        android:layout_toStartOf="@+id/textView2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khác 1"
        android:id="@+id/chkKhac1"
        android:checked="false"
        android:layout_below="@+id/chkTietkiem"
        android:layout_alignStart="@+id/chkTietkiem" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khác 2"
        android:id="@+id/chkKhac2"
        android:layout_alignTop="@+id/chkKhac1"
        android:layout_alignStart="@+id/chkTienthuong"
        android:checked="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtChitiet"
        android:hint="Chi tiết"
        android:layout_below="@+id/chkLuong"
        android:layout_alignStart="@+id/chkLuong"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtTien"
        android:hint="Số tiền (VND)"
        android:layout_below="@+id/edtChitiet"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập dữ liệu"
        android:id="@+id/btnAdd"
        android:layout_below="@+id/edtTien"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
