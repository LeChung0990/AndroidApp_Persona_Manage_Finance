<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demo.chung.com.appqlchitieu.activity_custom_layout2">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:src="@drawable/thunhap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Danh Mục"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_marginTop="35dp"
        android:layout_alignEnd="@+id/edtDate2"
        android:layout_toEndOf="@+id/imageView2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lương"
        android:id="@+id/chkLuong"
        android:checked="false"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiền thưởng"
        android:id="@+id/chkTienthuong"
        android:checked="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiết kiệm"
        android:id="@+id/chkTietkiem"
        android:checked="false"
        android:layout_below="@+id/chkLuong"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khác 1"
        android:id="@+id/chk1Khac"
        android:checked="false"
        android:layout_below="@+id/chkLuong"
        android:layout_alignStart="@+id/chkLuong" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khác 2"
        android:id="@+id/chk2Khac"
        android:layout_alignTop="@+id/chk1Khac"
        android:layout_alignStart="@+id/chkTienthuong"
        android:checked="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtChitiet2"
        android:hint="Nhập chi tiết khoản chi tiêu"
        android:layout_below="@+id/chkTietkiem"
        android:layout_alignStart="@+id/chkTietkiem"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtTien2"
        android:hint="Vui lòng nhập số tiền (VND)"
        android:layout_below="@+id/edtChitiet2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/chkLuong" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/edtDate2"
        android:layout_alignParentTop="true"
        android:hint="Thời gian (dd-mm-yy)"
        android:layout_alignEnd="@+id/chkTienthuong"
        android:layout_toEndOf="@+id/imageView2" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvhthi2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnHthi2"
        android:background="#5cffb8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách"
        android:id="@+id/btnHthi2"
        android:layout_below="@+id/edtTien2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgThem2"
        android:src="@drawable/add"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_below="@+id/edtTien2"
        android:layout_alignEnd="@+id/chkTietkiem" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgXoa2"
        android:src="@drawable/delete"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/btnHthi2"
        android:layout_alignEnd="@+id/chk2Khac" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtID_Inc"
        android:layout_above="@+id/imgXoa2"
        android:layout_toEndOf="@+id/chk1Khac"
        android:hint="ID muốn xoá" />

</RelativeLayout>
