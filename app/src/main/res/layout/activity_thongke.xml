<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demo.chung.com.appqlchitieu.Thongke">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2"
        android:background="#b7efef">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tổng chi tiêu tháng:"
                android:textStyle="bold"
                android:id="@+id/textView6"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_gravity="right"
                android:hint="mm/yyyy"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView6" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imgRefesh"
                android:layout_gravity="right"
                android:src="@drawable/refesh"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_marginStart="19dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/editText" />

        </RelativeLayout>




        <TextView
            android:layout_width="183dp"
            android:layout_height="30dp"
            android:id="@+id/textView7"
            android:hint="Số Tiền"
            android:textSize="20dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView1"
            android:drawSelectorOnTop="false"
            android:background="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#f9a59f"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tổng thu nhập tháng:"
                android:id="@+id/textView8"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_gravity="right"
                android:hint="mm/yyyy"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView8" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imgRefesh2"
                android:src="@drawable/refesh"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/editText2"
                android:layout_marginStart="10dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/textView9"
            android:textSize="20dp"
            android:hint="Số Tiền" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="500dp"
        android:id="@+id/relativeLayout"
        android:background="#f1fd69">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Còn lại:"
            android:id="@+id/textView11"
            android:textStyle="italic"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/textView10"
            android:hint="Số Tiền"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />

    </RelativeLayout>

</RelativeLayout>
